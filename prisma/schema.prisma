generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model guests {
  id          String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  accom_req   String
  dietary_req String
  group       Boolean
  guest_name  String
  invite_code String
  meal_choice String
  notes       String
  plus_one    String?
  rsvp        String
}

model invites {
  id            String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  accommodation String
  code          String
  guests        Json[]
  notes         String
}
